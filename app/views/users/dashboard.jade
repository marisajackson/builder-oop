h2#user(data-id=user._id.toString())= user.username
#stats
  #wood Wood: #{user.wood.toFixed(1)}
  #cash Cash: $#{user.cash}

button#plant Plant Seed
button#getforest Display Forest
input#amount
button#sell Sell Wood

#items
  h3 Items
  each item in user.items
    case item.type
      when 'autogrow'
        include ../items/autogrow

.market
  h3 MarketPlace
  if (user.isAutoGrowAvailable)
    button#purchase-autogrow Auto Grow $50000
  else
    .purchaseautogrow Auto Grow $50000
